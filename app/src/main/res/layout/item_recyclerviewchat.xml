<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignParentStart="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:id="@+id/matches_pic2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_pic"
        app:civ_border_color="#000000"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/matches_name2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/matches_pic2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeMinTextSize="6sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Sample Name"
        android:textColor="#000" />

    <TextView
        android:id="@+id/matches_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/matches_pic2"
        android:layout_below="@+id/matches_name2"
        android:text="Sample Message"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/matches_chat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/matches_pic2"
        android:layout_below="@+id/matches_id2"
        android:text="Sample Message"
        android:textSize="16dp" />

</RelativeLayout>
